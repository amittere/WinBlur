<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="WinBlur.App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="View/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <SolidColorBrush x:Key="ArticleContentBackgroundBrush_System" Color="{ThemeResource LayerFillColorDefault}" />
            <SolidColorBrush x:Key="ArticleContentBackgroundBrush_Light" Color="#EEEEEE"/>
            <SolidColorBrush x:Key="ArticleContentBackgroundBrush_Dark" Color="#1C1C1C"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
